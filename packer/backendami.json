{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
        "aws_secret_key": "{{env `AWS_SECRET_KEY`}}"
    },
    "builders": [{
         "type": "amazon-ebs",
         "access_key": "{{user `aws_access_key`}}",
         "secret_key": "{{user `aws_secret_key`}}",
         "region": "us-west-2",
         "source_ami": "ami-03d5c68bab01f3496",
         "source_ami_filter": {
	          "owners": ["099720109477"],
              "most_recent": true
         },
         "instance_type": "t2.micro",
         "ssh_username": "ubuntu",
         "ami_name": "backend{{timestamp}}",
         "associate_public_ip_address": true
     }],
    "provisioners": [
        {
            "type":"shell",
            "environment_vars": [
                "DB_HOST=db_host",
                "DB_PORT=db_port",
                "DB_NAME=db_name",
                "DB_USER=db_user",
                "DB_PASS=db_pass"],
            "inline":[
                "echo \"DB_PORT is $DB_PORT\"",
                "echo \"DB_PORT is $DB_PORT\"",
                "echo \"DB_NAME is $DB_NAME\"",
                "echo \"DB_USER is $DB_USER\"",
                "echo \"DB_PASS is $DB_PASS\""
            ]
        },
        {
            "type": "shell",
            "inline":[
                "sudo apt-get update -y",
                "sudo apt-get install openjdk-8-jdk maven openjdk-11-jdk wget unzip -y",
                "wget https://services.gradle.org/distributions/gradle-6.5.1-bin.zip -P /tmp",
                "sudo unzip -d /opt/gradle /tmp/gradle-6.5.1-bin.zip",
                "sudo ln -s /opt/gradle/gradle-6.5.1 /opt/gradle/latest"
            ]
        }

    ]
}
